{
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "Controllers/**/*.js",
    "Models/**/*.js",
    "middleware/**/*.js",
    "utils/**/*.js",
    "!**/*.test.js",
    "!**/node_modules/**"
  ],
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/*.test.js"
  ],
  "verbose": true,
  "forceExit": true,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "testTimeout": 30000,
  "transform": {}
}
